<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="216px"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="10px"
        app:cardCornerRadius="4dp">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lly_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/color4a4a4a" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6px"
                android:layout_marginTop="6px"
                android:paddingLeft="15px"
                android:paddingRight="15px">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="（隐患描述）"
                    android:textColor="@color/colord2b2b2b"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2018.06.12"
                    android:textColor="@color/colord2b2b2b"
                    android:textSize="14px" />
            </com.zhy.autolayout.AutoRelativeLayout>


        </com.zhy.autolayout.AutoLinearLayout>


    </android.support.v7.widget.CardView>

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/fly_add_img"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="11px"
        android:background="@drawable/record_img_bg_icon"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_add_timg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="15px"
            android:drawableTop="@drawable/record_add_img_icon"
            android:gravity="center_horizontal"
            android:text="点击添加照片"
            android:textColor="@color/color4a4a4a"
            android:textSize="14px" />


    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoLinearLayout>