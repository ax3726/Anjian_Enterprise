<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lly_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@color/colorTheme"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/mine_setting_icon"
                android:layout_marginRight="20px"
                android:layout_marginTop="17px"
              />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22px"
                android:paddingLeft="15px">

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@drawable/mine_head_icon" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17px"
                    android:layout_toRightOf="@+id/img_head"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorWhite"
                        android:textSize="20px" />

                    <TextView
                        android:id="@+id/tv_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="安全工程师"
                        android:textColor="@color/colorWhite"
                        android:textSize="14px" />
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="@color/colorWhite"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <TextView
                android:id="@+id/tv_lishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/mine_lishi_icon"
                android:drawablePadding="8px"
                android:gravity="center"
                android:text="历史记录"
                android:textColor="@color/color4a4a4a"
                android:textSize="16px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_right_icon" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginTop="1px"
            android:background="@color/colorWhite"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <TextView
                android:id="@+id/tv_shouchang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/mine_shoucang_icon"
                android:drawablePadding="8px"
                android:gravity="center"
                android:text="收藏夹"
                android:textColor="@color/color4a4a4a"
                android:textSize="16px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_right_icon" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginTop="1px"
            android:background="@color/colorWhite"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <TextView
                android:id="@+id/tv_beiwang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/mine_lishi_icon"
                android:drawablePadding="8px"
                android:gravity="center"
                android:text="备忘录"
                android:textColor="@color/color4a4a4a"
                android:textSize="16px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_right_icon" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/btn_tui"
            android:layout_marginBottom="40px"
            android:layout_width="match_parent"
            android:textSize="16px"
            android:textColor="@color/color4a4a4a"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:layout_height="50px"
            android:text="退出登陆" />
    </com.zhy.autolayout.AutoLinearLayout>
</layout>