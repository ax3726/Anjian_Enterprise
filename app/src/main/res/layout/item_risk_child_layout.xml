<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorbackground"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/colore6e6e6"
            android:layout_height="85px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginLeft="8px"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="容火灾、坍塌、起重伤害、高处 坠落、触电"
                android:layout_height="0dp"
                android:textSize="16px"
                android:textColor="@color/color4a4a4a"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.4.6"
                android:layout_gravity="right"
                android:layout_marginRight="4px"
                android:textColor="@color/color4a4a4a"
                android:textSize="14px" />

        </com.zhy.autolayout.AutoLinearLayout>




    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />
</com.zhy.autolayout.AutoFrameLayout>