<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lly_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoFrameLayout
                android:id="@+id/fly_img"
                android:layout_width="match_parent"
                android:layout_height="170px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_marginTop="11px"
                android:background="@drawable/record_img_bg_icon">

                <TextView
                    android:id="@+id/tv_add_timg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="15px"
                    android:drawableTop="@drawable/record_add_img_icon"
                    android:gravity="center_horizontal"
                    android:text="点击添加隐患照片"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="14px" />


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </com.zhy.autolayout.AutoFrameLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10px"
                android:background="@color/colorLine" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15px"
                android:paddingRight="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐患描述"
                    android:textColor="@color/color4a4a4a"
                    android:textSize="16px" />

                <TextView
                    android:id="@+id/tv_yinhuan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:hint="点击输入"
                    android:singleLine="true"
                    android:textColor="@color/color4a4a4a"
                    android:textColorHint="@color/colord9d9d9"
                    android:textSize="14px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />
