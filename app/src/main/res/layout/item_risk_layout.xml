<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorbackground"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_state"
            android:layout_width="3px"
            android:layout_height="match_parent"
            android:background="#5896ff" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="21px"
            android:layout_weight="1"
            android:text="风险点名称"
            android:textColor="@color/colord2b2b2b"
            android:textSize="18px" />

        <TextView
            android:id="@+id/tv_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9px"
            android:text="2018.4.6"
            android:textColor="@color/color4a4a4a"
            android:textSize="14px" />

        <ImageView
            android:layout_width="15px"
            android:layout_height="15px"
            android:layout_marginLeft="8px"
            android:layout_marginRight="15px"
            android:src="@drawable/record_right_icon" />
    </com.zhy.autolayout.AutoLinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />
</com.zhy.autolayout.AutoLinearLayout>